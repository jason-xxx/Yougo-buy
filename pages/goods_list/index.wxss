.search{
   background-color:#ccc;
   padding:20rpx;
}
.search-input{
  background-color: #fff;
  height: 60rpx;
  display: flex;
  align-items: center;
  border-radius:5px;
  color: #999;
  font-size: 14px;
}
.search-input icon{
    margin-right: 5px;
  }

  /* tab部分 */
  .list-tab{
    padding:20rpx;
    display: flex;
    justify-content: space-around;
    border-bottom: 1px #ccc solid;
  }


  .goods-list{
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px #eee solid;
}

.goods-list image{
    width: 200rpx;
    height: 200rpx;
    flex-shrink: 0;
}

.goods-list-right{
    flex: 1;
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.right-title{
   /* 溢出隐藏带省略号 */
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.price{
   font-size: 20px;
   color: red;
}
.price text{
   font-size: 16px;
}