/* 搜索框部分*/
.search{
   padding: 20rpx;
   display: flex;
   justify-content: space-between;
   background-color: #eee;
   height: 60rpx;
}

.search-input{
   display: flex;
   background-color: #fff;
   align-items: center;
   font-size: 16px;
   flex: 1;
   padding-left: 5px;
}

.search-input input{
   flex: 1;/* 让输入框填满.search-input */
   margin-left: 5px;
}

.btn{
   width: 150rpx;
   height: 60rpx;
   box-sizing: border-box;
   border: 1px #ccc solid;
   border-radius: 5px;
   display: flex;
   align-items: center;
   justify-content: center;
   margin-left: 20rpx;
}

/* 历史搜索部分 */

.history{
   display: flex;
   justify-content: space-between;
   padding: 20rpx;
   align-items: center;
}

.history-list{
   display: flex;
    flex-wrap: wrap;/*超出时换行 */
    padding-right: 20rpx;
}

.history-item{
   margin:10rpx 20rpx;
   padding: 10rpx 20rpx;
   background-color: #dedede;
}