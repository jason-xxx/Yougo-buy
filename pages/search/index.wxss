/* 搜索框部分*/
.container{
    min-height: 100vh;
} 	
.search-wrapper{
   padding: 20rpx;
   background-color: #eee;
}
.search{
   display: flex;
   justify-content: space-between;
   height: 60rpx;
   position: relative
}

/* 搜索推荐框样式 */
.recommend{
   position: absolute;
   left: 0rpx;
   top: 60rpx;
   background-color: #fff;
   width: 100%;
   padding: 20rpx 150rpx 10rpx 50rpx;
   box-sizing:border-box;
   border: 1px #eee solid;
   height: 50vh;
   overflow: auto;
}

.recommend navigator{
   /*前4行溢出隐藏*/
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1;
   overflow: hidden;
   border-bottom: 1px #eee solid;
   line-height: 80rpx;
   font-size: 14px;
   height: 80rpx;
}
.search-input{
   display: flex;
   background-color: #fff;
   align-items: center;
   font-size: 16px;
   flex: 1;
   padding-left: 5px;
}

.search-input input{
   flex: 1;/* 让输入框填满.search-input */
   margin-left: 5px;
}

.btn{
   width: 150rpx;
   height: 60rpx;
   box-sizing: border-box;
   border: 1px #ccc solid;
   border-radius: 5px;
   display: flex;
   align-items: center;
   justify-content: center;
   margin-left: 20rpx;
}

/* 历史搜索部分 */

.history{
   display: flex;
   justify-content: space-between;
   padding: 20rpx;
   align-items: center;
}

.history-list{
   display: flex;
    flex-wrap: wrap;/*超出时换行 */
    padding-right: 20rpx;
}

.history-item{
   margin:10rpx 20rpx;
   padding: 10rpx 20rpx;
   background-color: #dedede;
}